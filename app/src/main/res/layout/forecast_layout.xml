<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="0dp"
        android:background="@color/w_divider" />

    <TextView
        style="@style/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Forecast Details" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="0dp"
        android:background="@color/w_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_linearlayout"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="16dp"
        android:showDividers="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <LinearLayout style="@style/todaydetail_info_layout">

                <TextView
                    android:id="@+id/w_day1_text"
                    style="@style/todaydetail_info_title" />

                <org.openweathermap.ui.FontTextView
                    android:id="@+id/w_day1_content"
                    style="@style/todaydetail_info_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size"
                android:background="@color/w_divider_secondary" />

            <LinearLayout style="@style/todaydetail_info_layout">

                <TextView
                    android:id="@+id/w_day2_text"
                    style="@style/todaydetail_info_title" />

                <org.openweathermap.ui.FontTextView
                    android:id="@+id/w_day2_content"
                    style="@style/todaydetail_info_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size"
                android:background="@color/divider_secondary" />

            <LinearLayout style="@style/todaydetail_info_layout">

                <TextView
                    android:id="@+id/w_day3_text"
                    style="@style/todaydetail_info_title" />

                <org.openweathermap.ui.FontTextView
                    android:id="@+id/w_day3_content"
                    style="@style/todaydetail_info_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size"
                android:background="@color/divider_secondary" />

            <LinearLayout style="@style/todaydetail_info_layout">

                <TextView
                    android:id="@+id/w_day4_text"
                    style="@style/todaydetail_info_title" />

                <org.openweathermap.ui.FontTextView
                    android:id="@+id/w_day4_content"
                    style="@style/todaydetail_info_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size"
                android:background="@color/divider_secondary" />

            <LinearLayout style="@style/todaydetail_info_layout">

                <TextView
                    android:id="@+id/w_day5_text"
                    style="@style/todaydetail_info_title" />

                <org.openweathermap.ui.FontTextView
                    android:id="@+id/w_day5_content"
                    style="@style/todaydetail_info_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="0dp"
        android:background="@color/w_divider" />

    <TextView
        style="@style/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Sun" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="0dp"
        android:background="@color/w_divider" />

    <LinearLayout
        style="@style/todaydetail_info_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp">

        <TextView
            style="@style/todaydetail_info_title"
            android:text="SunRise" />

        <org.openweathermap.ui.FontTextView
            android:id="@+id/w_sun_rise"
            android:layout_marginRight="20dp"
            android:text="5:50"
            style="@style/todaydetail_info_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/divider_secondary" />

    <LinearLayout
        style="@style/todaydetail_info_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp">

        <TextView
            style="@style/todaydetail_info_title"
            android:text="SunSet" />

        <org.openweathermap.ui.FontTextView
            android:id="@+id/w_sun_set"
            android:layout_marginRight="20dp"
            android:text="6:30"
            style="@style/todaydetail_info_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/divider" />

</LinearLayout>

